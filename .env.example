# Kafka-Flink POC Environment Configuration
# Copy this file to .env and adjust values as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_REPLICATION_FACTOR=3
KAFKA_MIN_INSYNC_REPLICAS=2
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false
KAFKA_DELETE_TOPIC_ENABLE=true
KAFKA_NUM_PARTITIONS=6

# Flink Configuration
FLINK_JOBMANAGER_URL=localhost:8081
FLINK_PARALLELISM=4
FLINK_CHECKPOINTING_INTERVAL=60000
FLINK_CHECKPOINTING_MODE=EXACTLY_ONCE
FLINK_JOBMANAGER_HEAP=2048m
FLINK_TASKMANAGER_HEAP=4096m
FLINK_TASKMANAGER_SLOTS=4

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=kafka-poc
ELASTICSEARCH_CLUSTER_NAME=kafka-poc-cluster

# Kibana Configuration
KIBANA_URL=http://localhost:5601
KIBANA_ELASTICSEARCH_HOSTS=http://elasticsearch:9200

# Kafka UI Configuration
KAFKA_UI_URL=http://localhost:8080
KAFKA_UI_CLUSTERS_0_NAME=kafka-poc-cluster

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Development Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# Performance Tuning
KAFKA_HEAP_OPTS=-Xmx1G -Xms1G
KAFKA_JVM_PERFORMANCE_OPTS=-server -XX:+UseG1GC -XX:MaxGCPauseMillis=20 -XX:InitiatingHeapOccupancyPercent=35

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Security (if needed)
SSL_ENABLED=false
SASL_MECHANISM=PLAIN

# Topic Configuration Defaults
DEFAULT_RETENTION_MS=604800000  # 7 days
COMPACTED_RETENTION_MS=2592000000  # 30 days
SHORT_RETENTION_MS=86400000  # 1 day